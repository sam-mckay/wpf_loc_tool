<Page x:Class="Wpf_Loc_Tool.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Loc_Tool"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel Width="400">
            <Label Content="Select the role that best describes what you need to do"/>
            <Button x:Name="DesignerModeButton" Content="Designer" Click="DesignerModeButton_Click"/>
            <Button x:Name="TranslatorModeButton" Content="Translator"/>
            <Button x:Name="OtherUserButton" Content="Other"/>
            
        </StackPanel>

    </Grid>
</Page>
